# Gmail Configuration
# For IMAP access, you need to enable "Less secure app access" or use App Passwords
# Recommended: Use App Password (https://myaccount.google.com/apppasswords)

GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# IMAP Settings (Gmail defaults)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true

# SMTP Settings (Gmail defaults)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Google AI (Gemini) Configuration
GOOGLE_API_KEY=your-google-api-key

# Agent Configuration
POLL_INTERVAL_SECONDS=60
MAX_EMAILS_PER_BATCH=10
AUTO_RESPOND=false
LOG_LEVEL=INFO

# Email Templates Directory (optional)
TEMPLATES_DIR=./templates
